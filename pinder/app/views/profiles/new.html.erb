<% if @profile.errors.any? %>
  <section id="errors" >
    <h2> <%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved: </h2>
    <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end %>

<%= form_for @profile do |f| %>
  <%= f.label :owner_name %>:
  <%= f.text_field :owner_name %><br><br>
  <%= f.label :owner_age %>:
  <%= f.text_field :owner_age %><br><br>
  <%= f.label :gender %>:
  <%= f.select :gender, ["Male", "Female", "Other"] %><br><br>
  <%= f.label :sexual_preference %>
  <%= f.select :sexual_preference, ["Straight", "Homosexual", "Bisexual", "Other"] %><br><br>
  <%= f.label :owner_likes %>:
  <%= f.text_field :owner_likes %><br><br>
  <%= f.label :owner_dislikes %>:
  <%= f.text_field :owner_dislikes %><br><br>
  <%= f.label :owner_image %>
  <%= f.file_field :owner_image %><br><br>
  <%= f.label :pet_name %>:
  <%= f.text_field :pet_name %><br><br>
  <%= f.label :pet_age %>:
  <%= f.text_field :pet_age %><br><br>
  <%= f.label :pet_species %>:
  <%= f.select :pet_species, ["Dog", "Cat", "Fish", "Reptile", "Rodent", "Other"] %><br><br>
  <%= f.label :pet_likes %>:
  <%= f.text_field :pet_likes %><br><br>
  <%= f.label :pet_dislikes %>:
  <%= f.text_field :pet_dislikes %><br><br>
  <%= f.label :pet_image %>
  <%= f.file_field :pet_image %><br><br>
  <%= f.submit "Submit Profile" %>
<% end %>
